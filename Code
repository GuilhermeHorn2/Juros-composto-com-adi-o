    int main()

    {
        double ini;
        scanf("%lf",&ini);
        double mensal;
        scanf("%lf",&mensal);
        double j;
        scanf("%lf",&j);
        double t;
        scanf("%lf",&t);

        double r  = 1;
        double c = ini;
        for(int i = 0;i < t;i++){
            r += (c)*(1+(j)/100);
            c += mensal;
        }
        printf("%.2lf",r);

    }
